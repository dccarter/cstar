import { Server, Request, Response } from "stdlib/http.cxy"

pub func main()  {
    var server = Server[()]();
    server("/hello", (@unused req: &const Request, resp: &Response) => {
        resp.body() << "Hello, World!"
    })

    server("/quite", (@unused req: &const Request, @unused resp: &Response) => {
        server.stop()
    })
    server.start()
}
