
func main(args: [string]) {
    var a = 0 as i32;

    // Body can just be an expression statement
    if (true)
        a = 1;

    // Condition is any expression
    if (a == 1) {
        // Body can be an empty block
    }

    // If with an else statement. Else statement is optional
    if (a % 1) { }
    else { }

    // Cascaded if-else
    if (a % 1) {}
    else if (a % 2) {}
    else {}

    // Variable declarations allowed in if statements
    if (var b = a * 3) {
        println(b)
    }
}